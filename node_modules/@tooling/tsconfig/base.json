{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2017",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "preserveSymlinks": true,
    "strict": true,
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "preserve",
    "types": []
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
